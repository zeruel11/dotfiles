#!/bin/bash
#fmd db sync

if [ "$1" == 'push' ]
then
	rsync -Cuazv /c/untied/FMD/data/ /d/_gitClone/\[encoder\]/manDB/data/
	rsync -Cuazv --exclude-from='exclude-fmd.txt' /c/untied/FMD/works/ /d/_gitClone/\[encoder\]/manDB/works/
elif [ "$1" == 'pull' ]
then
	rsync -Cuazv --exclude='*.db-journal' /d/_gitClone/\[encoder\]/manDB/works/ /c/untied/FMD/works/
else
	echo 'you have to specify up or down'
fi
